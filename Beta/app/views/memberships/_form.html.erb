<% if policy(@project).edit? %>
	<%= form_for([@project, @project.memberships.build]) do |f| %>
	  <p class="form_group">
	  	<%= f.label :user_id, '案件のユーザー:' %>
    	<%= f.text_field :user_id, id: :project_user_tokens %>
	  </p>
	  <p class="form_group">
	    <%= f.submit '追加する', class: 'btn btn-info' %>
	  </p>
	<% end %>
<% end %>

	