<%= form_for([conversation, conversation.messages.build]) do |f| %>
  <p class="form_group">
    <%= f.label :content, '新しいメッセージ:' %><br>
    <%= f.text_area :content, class: 'form-control', :required => 'required' %>
  </p>
  <p class="form_group">
    <%= f.submit '  送る  ', class: 'btn btn-info' %>
  </p>
<% end %>