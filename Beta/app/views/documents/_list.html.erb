<table class="table table-striped">
  <thead>
  	<tr>
  		<th>File name</th>
  		<th>Download file</th>
  		<th>Delete file</th>
  	</tr>
  </thead>
  <tbody>
  	<% @documents.each do |document| %>
		<tr>
			<td><%= document.attachment %></td>
			<td><%= link_to "Download", document.attachment_url %></td>
			<td><%= button_to "Delete",  [document.project, document], method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete this file?" %></td>
		</tr> 
	<% end %>
  </tbody>
</table>
   
